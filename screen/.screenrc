startup_message off

# encode
defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencofing utf-8

# escape
escape ^t^t

term screen-256color

# The scroll buffer
defscrollback 8195
markkeys h=^B:l=^F:$=^E:^U=^Z:^D=^V
 
# Messages
msgwait 3
msgminwait 2
 
hardstatus string "%?%h%:%t (screen #%n on %H)%?"
caption always "%{=r dd}%-Lw%40L>%?%F%{=b dR}%:[%? %n%f %t %?%F%{-}%:]%?%+Lw %?%F%-024=GNU Screen of Git master%:%=%?"
sorendition "+rb .G"